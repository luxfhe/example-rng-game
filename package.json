{
  "name": "luxfhe-hardhat-example",
  "version": "1.0.0",
  "description": "An example repository to get you started with luxfhe development",
  "scripts": {
    "test": "REPORT_GAS=true hardhat test --network localluxfhe",
    "test:hardhat": "REPORT_GAS=true hardhat test --network hardhat",
    "test:localluxfhe": "REPORT_GAS=true hardhat test --network localluxfhe",
    "clean": "rimraf ./artifacts ./cache ./coverage ./types ./coverage.json ./deployments/localluxfhe",
    "compile": "hardhat compile",
    "--------------": "",
    " --- luxfhe ---": "",
    "  --------------": "",
    "luxfhe:faucet": "hardhat task:luxfhe:usefaucet",
    "luxfhe:checkExposedEncryptedVars": "hardhat task:luxfhe:checkExposedEncryptedVars",
    "task:deploy": "hardhat deploy",
    "play": "hardhat task:play",
    "-------------------": "",
    " --- localluxfhe ---": "",
    "  -------------------": "",
    "localluxfhe:start": "pnpm clean && hardhat localluxfhe:start",
    "localluxfhe:faucet": "hardhat task:luxfhe:usefaucet",
    "localluxfhe:deploy": "hardhat deploy --network localluxfhe",
    "localluxfhe:stop": "hardhat localluxfhe:stop"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/luxfhe/luxfhe-hardhat-example.git"
  },
  "author": "luxfhe",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/luxfhe/luxfhe-hardhat-example/issues"
  },
  "homepage": "https://github.com/luxfhe/luxfhe-hardhat-example#readme",
  "devDependencies": {
    "@ethersproject/abi": "^5.7.0",
    "@ethersproject/providers": "^5.7.1",
    "@luxfhe/contracts": "^0.5.0",
    "@nomicfoundation/hardhat-chai-matchers": "^2.0.3",
    "@nomicfoundation/hardhat-ethers": "^3.0.5",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.6",
    "@nomicfoundation/hardhat-verify": "^2.0.3",
    "@openzeppelin/contracts": "^5.0.0",
    "@typechain/ethers-v6": "^0.5.1",
    "@typechain/hardhat": "^9.1.0",
    "@types/chai": "^5.0.0",
    "@types/eslint": "^8",
    "@types/mocha": "^9.1.1",
    "@types/prettier": "^2",
    "@types/qrcode": "^1",
    "@typescript-eslint/eslint-plugin": "latest",
    "@typescript-eslint/parser": "latest",
    "chai": "^4.3.6",
    "chalk": "^5.3.0",
    "dotenv": "^16.0.3",
    "envfile": "^6.18.0",
    "eslint": "^8.26.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "ethers": "^6.10.0",
    "luxfhe-hardhat-docker": "0.3.2",
    "luxfhe-hardhat-network": "0.3.2",
    "luxfhe-hardhat-plugin": "0.3.2",
    "@luxfhe/v1-sdk": "^0.5.0",
    "hardhat": "^2.19.4",
    "hardhat-deploy": "^0.12.0",
    "hardhat-deploy-ethers": "^0.4.1",
    "hardhat-gas-reporter": "^1.0.9",
    "inquirer": "^12.0.0",
    "prettier": "^2.8.4",
    "qrcode": "^1.5.1",
    "rimraf": "^5.0.5",
    "solidity-coverage": "^0.8.5",
    "ts-node": "^10.9.1",
    "typechain": "^8.1.0",
    "typescript": "^5.1.6"
  }
}
